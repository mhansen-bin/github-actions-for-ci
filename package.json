{
  "name": "actions-template",
  "version": "1.0.0",
  "description": "Learn how to use GitHub Actions!",
  "main": "index.js",
  "directories": {
    "test": "__test__",
    "src": "src"
  },
  "scripts": {
    "build": "webpack --config ./src/webpack.config.js --mode production",
    "dev": "webpack --config ./src/webpack.config.js --mode development --watch",
    "test": "standard && jest",
    "test:postman:dev:remote": "newman run https://api.getpostman.com/collections/${{ secrets.POSTMAN_COLLECTION_UID }}?apikey=${{ secrets.POSTMAN_API_KEY }} --environment https://api.getpostman.com/environments/${{ secrets.POSTMAN_DEV_ENVIRONMENT_UID }}?apikey=${{ secrets.POSTMAN_API_KEY }}"
  },
  "author": "githubtraining",
  "license": "MIT",
  "standard": {
    "env": [
      "jest",
      "browser"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@babel/register": "^7.9.0",
    "babel-jest": "^26.3.0",
    "babel-loader": "^8.0.5",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^27.4.7",
    "newman": "^5.3.1",
    "script-ext-html-webpack-plugin": "^2.1.3",
    "standard": "^14.3.1",
    "webpack": "^4.28.4",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "node-forge": "^0.10.0"
  }
}
